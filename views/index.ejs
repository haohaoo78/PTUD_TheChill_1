<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <title><%= typeof title !== 'undefined' ? title : 'Hệ thống quản lý' %></title>
  <link rel="stylesheet" href="/css/globals.css">
</head>
<body>

  <!-- Header -->
  <%- include('partials/header') %>

  <main class="container">

    <% if (user) { %>
      <!-- Sidebar -->
      <aside class="sidebar">
        <%- include('partials/sidebar') %>
      </aside>

      <!-- Nội dung chính -->
      <section id="main-content" class="content">
        <% if (page === 'home') { %>
          <%- include('pages/home') %>
        <% } else { %>
          <%- include('pages/' + page) %>
        <% } %>
      </section>

    <% } else { %>
      <!-- Nếu chưa login, kiểm tra page -->
      <section id="main-content" class="content">
        <% if (page === 'dangky') { %>
          <%- include('pages/dangky') %>
        <% } else { %>
          <%- include('pages/dangnhap') %>
        <% } %>
      </section>
    <% } %>

  </main>

  <!-- Footer -->
  <%- include('partials/footer') %>

  <script src="/js/1_main.js"></script>
</body>
</html>