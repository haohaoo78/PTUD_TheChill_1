<link rel="stylesheet" href="/css/quanlyHSGV.css">

<div class="ql-container">
  <h2>Quản lý Thông tin Học sinh / Giáo viên</h2>

  <div class="management-selector">
    <button id="manage-hs" class="btn active">Học sinh</button>
    <button id="manage-gv" class="btn">Giáo viên</button>
  </div>

  <!-- ========== HỌC SINH ========== -->
  <section id="hs-section" class="section">
    <div class="filter-pane">
      <label>Năm học:</label>
      <select id="filter-namhoc-hs"></select>
      <label>Khối:</label>
      <select id="filter-khoi-hs"></select>
      <label>Lớp:</label>
      <select id="filter-lop-hs"></select>
      <button id="btn-xem-hs" class="btn primary">Xem</button>
    </div>

    <table id="hs-table">
      <thead>
        <tr>
          <th>Mã HS</th><th>Họ tên</th><th>Ngày sinh</th>
          <th>Khối</th><th>Lớp</th><th>Giới tính</th>
          <th>Trạng thái</th><th>Hành động</th>
        </tr>
      </thead>
      <tbody></tbody>
    </table>
  </section>

  <!-- ========== GIÁO VIÊN ========== -->
  <section id="gv-section" class="section" style="display:none;">
    <div class="filter-pane">
      <label>Môn học:</label>
        <select id="filter-monhoc-gv">
          <option value="">-- Tất cả --</option>
        </select>
      <button id="btn-xem-gv">Xem</button>
      <button id="btn-them-gv" class="add-btn">+ Thêm Giáo viên</button>
    </div>

    <table id="gv-table">
      <thead>
        <tr>
          <th>Mã GV</th><th>Họ tên</th><th>Ngày sinh</th><th>Email</th>
          <th>SĐT</th><th>Bộ môn</th><th>Giới tính</th>
          <th>Trạng thái</th><th>Hành động</th>
        </tr>
      </thead>
      <tbody></tbody>
    </table>
  </section>
</div>

<!-- ========== MODAL GIÁO VIÊN ========== -->
<div id="modal" class="modal">
  <div class="modal-content">
    <span id="modal-close">&times;</span>
    <h3 id="modal-title">Thêm/Sửa Giáo viên</h3>
    <form id="modal-form">
      <input type="hidden" id="modal-id">
      <div id="modal-fields"></div>
      <button type="submit" class="btn primary full">Lưu</button>
    </form>
  </div>
</div>

<!-- ========== MODAL HỌC SINH ========== -->
<div id="modal-hs" class="modal" style="display:none;">
  <div class="modal-content">
    <span id="modal-hs-close" class="modal-close">&times;</span>
    <h3 id="modal-hs-title">Thêm/Sửa Học sinh</h3>
    <form id="modal-hs-form">
      <input type="hidden" id="modal-hs-id">
      <div id="modal-hs-fields"></div>
      <button type="submit" class="btn primary full">Lưu</button>
    </form>
  </div>
</div>

<script src="/js/quanlyHSGV.js"></script>
