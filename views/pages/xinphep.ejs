<link rel="stylesheet" href="/css/XinPhep.css">

<div class="xinphep-container">
  <h2>Xin Phép Nghỉ Học</h2>

  <div class="form-section">
    <h3>Tạo đơn xin phép mới</h3>
    <form id="form-xinphep">
      <div class="form-group">
        <label for="tenCon">Tên con:</label>
        <input type="text" id="tenCon" value="<%= (typeof student !== 'undefined' && student) ? student.TenHocSinh : '' %>" readonly required>
        <input type="hidden" id="maHS" value="<%= (typeof student !== 'undefined' && student) ? student.MaHocSinh : '' %>">
      </div>
      <div class="form-group">
        <label for="ngayNghi">Ngày nghỉ:</label>
        <input type="date" id="ngayNghi" required>
      </div>
      <div class="form-group">
        <label for="lyDo">Lý do nghỉ:</label>
        <textarea id="lyDo" rows="3" placeholder="Nhập lý do nghỉ học..." required></textarea>
      </div>
      <button type="submit" class="btn-submit">Gửi Đơn</button>
    </form>
  </div>

  <div class="history-section">
    <h3>Lịch sử xin phép</h3>
    <table class="history-table">
      <thead>
        <tr>
          <th>Ngày gửi</th>
          <th>Thời gian nghỉ</th>
          <th>Lý do</th>
          <th>Trạng thái</th>
        </tr>
      </thead>
      <tbody id="history-body">
        <!-- Data populated by JS -->
      </tbody>
    </table>
  </div>
</div>

<script src="/js/XinPhep.js"></script>
