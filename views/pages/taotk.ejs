<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Quản lý Tài khoản</title>
  <link rel="stylesheet" href="/css/taotaikhoan.css"/>
</head>

<body>
  <div class="container">
    <div class="ql-container">
      <h2>Quản lý Danh sách Tài khoản</h2>

      <!-- BỘ LỌC -->
      <div class="filter-pane">
        <div class="search-box">
          <input type="text" id="search-taikhoan" placeholder="Tìm mã tài khoản...">
          <span>Tìm kiếm</span>
        </div>

        <label>Loại tài khoản:</label>
        <select id="filter-loai">
          <option value="">-- Tất cả --</option>
          <option value="HieuTruong">Hiệu trưởng</option>
          <option value="GiaoVien">Giáo viên</option>
          <option value="HocSinh">Học sinh</option>
          <option value="GiaoVu">Giáo vụ</option>
          <option value="ThiSinh">Thí sinh</option>
          <option value="CanBoSGD">Cán bộ SGD</option>
          <option value="QuanTriVien">Quản trị hệ thống</option>
        </select>

        <label>Trạng thái:</label>
        <select id="filter-trangthai">
          <option value="">-- Tất cả --</option>
          <option value="1">Hoạt động</option>
          <option value="0">Khóa</option>
        </select>

        <button id="btn-them" class="add-btn">+ Tạo Tài khoản mới</button>
      </div>

      <!-- BẢNG DỮ LIỆU -->
      <table id="account-table" class="table">
        <thead>
          <tr>
            <th>Mã tài khoản</th>
            <th>Loại tài khoản</th>
            <th>Trạng thái</th>
            <th>Hành động</th>
          </tr>
        </thead>
        <tbody></tbody> <!-- JS sẽ fill -->
      </table>
    </div>
  </div>

  <!-- MODAL -->
  <div id="modal-account" class="modal modal-flex">
    <div class="modal-content">
      <span class="modal-close">×</span>
      <h3 id="modal-title">Thêm / Sửa Tài khoản</h3>

      <form id="modal-form">

        <label>Mã tài khoản <span class="required">*</span></label>
        <input type="text" id="ma" maxlength="20" required>

        <label>Loại tài khoản <span class="required">*</span></label>
        <select id="loaiTK" required>
          <option value="">-- Chọn loại --</option>
        </select>

        <label>Mật khẩu <span class="required">*</span></label>
        <input type="password" id="password" required>

        <div class="modal-actions">
          <button type="submit" id="btn-save">Lưu</button>
          <button type="button" id="btn-cancel">Hủy</button>
        </div>
      </form>
    </div>
  </div>

  <script src="/js/taikhoan.js"></script>
</body>
</html>
