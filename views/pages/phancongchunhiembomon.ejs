<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Phân công giáo viên</title>
  <link rel="stylesheet" href="/css/PhanCongChuNhiemBoMon.css">


</head>
<body>
  <header>Phân công giáo viên</header>
  <main_1>
    <section>
      <div class="controls">
        <label>Năm học:</label>
        <select id="namhoc-select">
          <% namHocList.forEach(n => { %>
            <option value="<%= n %>" <%= n === selectedNamHoc ? 'selected' : '' %>><%= n %></option>
          <% }) %>
        </select>

        <label>Học kỳ:</label>
        <select id="kyhoc-select">
          <% kyHocList.forEach(k => { %>
            <option value="<%= k %>" <%= k === selectedKyHoc ? 'selected' : '' %>><%= k %></option>
          <% }) %>
        </select>

        <div class="mode-tabs">
          <button id="tab-chunhiem" class="mode active">Chủ nhiệm</button>
          <button id="tab-bomon" class="mode">Bộ môn</button>
        </div>
      </div>

      <!-- Tab Chủ nhiệm -->
      <div id="chunhiem-panel" class="panel">
        <h3>Phân công giáo viên chủ nhiệm</h3>
        <table id="classes-table" class="grid">
          <thead>
            <tr>
              <th>STT</th>
              <th>Mã lớp</th>
              <th>Tên lớp</th>
              <th>Giáo viên chủ nhiệm</th>
              <th>Thao tác</th>
            </tr>
          </thead>
          <tbody>
            <tr><td colspan="5">Đang tải...</td></tr>
          </tbody>
        </table>
      </div>

      <!-- Tab Bộ môn -->
      <div id="bomon-panel" class="panel hide">
        <h3>Phân công giáo viên bộ môn</h3>
        <div class="selectors">
          <label>Khối:</label>
          <select id="khoi-select">
            <option value="">-- Chọn khối --</option>
            <% khoiList.forEach(k => { %>
              <option value="<%= k.MaKhoi %>"><%= k.TenKhoi %></option>
            <% }) %>
          </select>

          <label>Môn:</label>
          <select id="mon-select">
            <option value="">-- Chọn môn --</option>
          </select>

          <label>Giáo viên:</label>
          <select id="gv-select">
            <option value="">-- Chọn giáo viên --</option>
          </select>
        </div>

        <table id="classes-bomon-table" class="grid">
          <thead>
            <tr>
              <th>STT</th>
              <th>Mã lớp</th>
              <th>Tên lớp</th>
              <th>Chọn</th>
              <th>Số tiết môn</th>
            </tr>
          </thead>
          <tbody>
            <tr><td colspan="5">Chọn khối và môn để tải lớp</td></tr>
          </tbody>
        </table>

        <div style="text-align: center; margin-top: 20px;">
          <button id="assign-bomon">Phân công bộ môn</button>
        </div>

        <h3 style="margin-top: 40px;">Danh sách phân công giáo viên bộ môn</h3>
        <div class="selectors" style="margin-bottom: 20px;">
          <label>Môn:</label>
          <select id="filter-mon-select">
            <option value="">-- Tất cả môn --</option>
          </select>

          <label>Giáo viên:</label>
          <select id="filter-gv-select">
            <option value="">-- Tất cả giáo viên --</option>
          </select>

          <button id="filter-btn">Lọc</button>
        </div>

        <table id="assignment-table" class="grid">
          <thead>
            <tr>
              <th>STT</th>
              <th>Khối</th>
              <th>Môn</th>
              <th>Giáo viên</th>
              <th>Mã lớp</th>
              <th>Tên lớp</th>
              <th>Năm học</th>
              <th>Học kỳ</th>
              <th>Thao tác</th>
            </tr>
          </thead>
          <tbody>
            <tr><td colspan="9">Đang tải danh sách phân công...</td></tr>
          </tbody>
        </table>
      </div>
    </section>
  </main_1>

  <!-- Modal chung - đã căn giữa -->
  <div id="assign-modal" class="modal">
    <div class="modal-content">
      <span class="close">&times;</span>
      <div id="modal-body">Đang tải...</div>
    </div>
  </div>
  <script src="/js/PhanCongChuNhiemBoMon.js"></script>
</body>
</html>